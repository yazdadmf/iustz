class Character;
class Zombie: public nonfreindly{ 
	//MODEL
	public:
    string id;
    int damage = 10;
    int health = 100;
    int maxhealth;
    string weakness;
    std::vector<std::pair<int, std::string>> effects;
    std::vector<std::pair<int, std::string>> attackEffects;
    std::string block;
    std::string hint;
    std::string discription;

    Zombie(std::string tzname) {
        if (tzname == "zombie1") {
            id = tzname;
            damage = 10;
            maxhealth = 100;
            health = 100;
            weakness = "";
            type = "zombie";
        }
    }

    void addeffects(vector<pair<int,string>> neew){
    	effects.insert(effects.end(),neew.begin(),neew.end());
	}
}
